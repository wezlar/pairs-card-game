{
  "name": "pairs-card-game",
  "version": "1.0.0",
  "description": ":) ",
  "scripts": {
    "build:webpack": "NODE_ENV=production webpack",
    "build": "npm run clean && npm run build:webpack",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "test-coverage": "NODE_ENV=test jest --coverage",
    "lint": "./node_modules/.bin/eslint --ext js,jsx ./",
    "clean": "rimraf dist",
    "start": "webpack-dev-server --open",
    "webpack": "webpack",
    "tunnel": "browser-sync start --proxy localhost:7770 --tunnel wesbos"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wezlar/pairs-card-game.git"
  },
  "author": "Wes Bos",
  "license": "MIT",
  "homepage": "https://github.com/wezlar/pairs-card-game",
  "dependencies": {
    "enzyme": "^3.6.0",
    "enzyme-adapter-react-16": "^1.5.0",
    "eslint": "^5.14.1",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-react": "^7.12.4",
    "express": "^4.13.4",
    "html-webpack-plugin": "^3.2.0",
    "prop-types": "^15.7.2",
    "raw-loader": "^1.0.0",
    "react": "^16.8.2",
    "react-dom": "^16.8.2",
    "react-redux": "^6.0.1",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.4",
    "redux": "^4.0.1",
    "rimraf": "^2.5.2",
    "styled-components": "^4.1.3",
    "stylus": "^0.54.5"
  },
  "devDependencies": {
    "@babel/core": "^7.3.3",
    "@babel/preset-env": "^7.3.1",
    "@babel/preset-react": "^7.0.0",
    "babel-eslint": "^10.0.1",
    "babel-loader": "^8.0.5",
    "css-loader": "^0.23.1",
    "cypress": "^3.4.1",
    "eslint-plugin-cypress": "^2.7.0",
    "file-loader": "^3.0.1",
    "jest": "^24.1.0",
    "style-loader": "^0.23.1",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.30.0",
    "webpack-cli": "^3.3.1",
    "webpack-dev-server": "^3.3.1"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg|ttf|css)$": "<rootDir>/testHelpers/assetsTransformer.js",
      "@jest-helpers(.*)$": "<rootDir>/testHelpers/$1"
    },
    "collectCoverageFrom": [
      "**/client/**/*.js"
    ]
  }
}
