{
  "name": "pairs-card-game",
  "version": "1.0.0",
  "description": ":) ",
  "scripts": {
    "build:webpack": "NODE_ENV=production webpack -p --config webpack.config.js",
    "build": "npm run clean && npm run build:webpack",
    "cy:run": "cypress run",
    "cy:open": "cypress open",
    "test:e2e": "is-ci \"test:e2e:run\" \"test:e2e:dev\"",
    "pretest:e2e:run": "npm run build",
    "test:e2e:run": "start-server-and-test start http://localhost:8080 cy:run",
    "test:e2e:dev": "start-server-and-test dev http://localhost:8080 cy:open",
    "test": "NODE_ENV=test jest --watch",
    "test-win": "SET NODE_ENV=test&& jest --watch",
    "test-coverage": "NODE_ENV=test jest --coverage",
    "lint": "./node_modules/.bin/eslint --ext js,jsx ./",
    "clean": "rimraf dist",
    "start": "webpack-dev-server --open",
    "dev": "webpack-dev-server --open",
    "webpack": "webpack",
    "tunnel": "browser-sync start --proxy localhost:7770 --tunnel wesbos",
    "precommit": "lint-staged",
    "storybook": "start-storybook"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/wezlar/pairs-card-game.git"
  },
  "author": "Wes Bos",
  "license": "MIT",
  "homepage": "",
  "dependencies": {
    "enzyme": "^3.11.0",
    "enzyme-adapter-react-16": "^1.15.2",
    "eslint": "^5.16.0",
    "eslint-plugin-babel": "^5.3.0",
    "eslint-plugin-react": "^7.19.0",
    "express": "^4.17.1",
    "html-webpack-plugin": "^3.2.0",
    "prop-types": "^15.7.2",
    "raw-loader": "^1.0.0",
    "react": "^16.13.1",
    "react-dom": "^16.13.1",
    "react-redux": "^6.0.1",
    "react-router": "^3.2.6",
    "react-router-redux": "^4.0.4",
    "redux": "^4.0.5",
    "rimraf": "^2.7.1",
    "styled-components": "^4.4.1",
    "stylus": "^0.54.7"
  },
  "devDependencies": {
    "@babel/core": "^7.9.6",
    "@babel/preset-env": "^7.9.6",
    "@babel/preset-react": "^7.9.4",
    "@storybook/react": "^5.3.18",
    "@testing-library/cypress": "^5.3.1",
    "babel-eslint": "^10.1.0",
    "babel-loader": "^8.1.0",
    "css-loader": "^0.23.1",
    "cypress": "^3.8.3",
    "eslint-plugin-cypress": "^2.10.3",
    "file-loader": "^3.0.1",
    "jest": "^24.9.0",
    "start-server-and-test": "^1.11.0",
    "style-loader": "^0.23.1",
    "stylus-loader": "^3.0.2",
    "webpack": "^4.43.0",
    "webpack-cli": "^3.3.11",
    "webpack-dev-server": "^3.10.3"
  },
  "jest": {
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "testPathIgnorePatterns": [
      "<rootDir>/node_modules/"
    ],
    "transform": {
      ".*": "babel-jest",
      "^.+\\.js?$": "babel-jest"
    },
    "moduleNameMapper": {
      "\\.(jpg|jpeg|png|gif|svg|ttf|css)$": "<rootDir>/testHelpers/assetsTransformer.js",
      "@jest-helpers(.*)$": "<rootDir>/testHelpers/$1"
    },
    "collectCoverageFrom": [
      "**/client/**/*.js"
    ]
  }
}
